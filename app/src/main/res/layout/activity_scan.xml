<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.10">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/barcode_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="" />
        </android.support.design.widget.TextInputLayout>
    </RelativeLayout>
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.90">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="0.70">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:shrinkColumns="1"
                    android:stretchColumns="2">

                    <TableRow
                        android:id="@+id/tableRow1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="5dip">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="Part:"
                            android:textColor="#000" />

                        <TextView
                            android:id="@+id/partName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="Part"
                            android:textColor="#000" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="5dip">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="Location:"
                            android:textColor="#000" />

                        <TextView
                            android:id="@+id/partLocation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="Location"
                            android:textColor="#000" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dip">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="Stock:"
                            android:textColor="#000" />

                        <TextView
                            android:id="@+id/partStock"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="Stock"
                            android:textColor="#000" />
                    </TableRow>
                </TableLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="0.30">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_height="match_parent"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <Button
                            android:layout_height="0dp"
                            android:layout_width="fill_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textSize="25sp"
                            android:text="+1"
                            android:id="@+id/addStockOne_button"

                            />

                        <Button
                            android:layout_height="0dp"
                            android:layout_width="fill_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textSize="25sp"
                            android:text="-1"
                            android:id="@+id/removeStockOne_button"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_height="match_parent"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <Button
                            android:layout_height="0dp"
                            android:layout_width="fill_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textSize="25sp"
                            android:text="+n"
                            android:id="@+id/addStockMulti_button"

                            />

                        <Button
                            android:layout_height="0dp"
                            android:layout_width="fill_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textSize="25sp"
                            android:text="-n"
                            android:id="@+id/removeStockMulti_button"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_height="match_parent"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <Button
                            android:layout_height="0dp"
                            android:layout_width="fill_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textSize="25sp"
                            android:text="=n"
                            android:id="@+id/setStock_button"

                            />

                        <Button
                            android:layout_height="0dp"
                            android:layout_width="fill_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textSize="25sp"
                            android:text="=0"
                            android:id="@+id/clearStock_button"
                            />

                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout >